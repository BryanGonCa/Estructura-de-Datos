#include "StdAfx.h"
#include "persona.h"
#include <iostream>

using namespace std;


persona::persona(int _edad, int _carnet)
{
	edad=_edad;
	carnet=_carnet;
}


persona::~persona(void)
{
}

void persona::leer(){
	cout<<"Tengo "<<edad<<" y estoy leyendo el periodico y mi carnet es "<<carnet<<endl;
}

void persona::correr(){
	cout<<"Tengo "<<edad<<" y estoy corriendo una carrera y mi carnet es "<<carnet<<endl;
}
